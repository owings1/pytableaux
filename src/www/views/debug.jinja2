<div class="pt-app">
    <div id="pt_debugs_wrapper" class="debugs-wrapper">
        <div class="debugs">
            <h3 id="pt_debugs_heading">Debug</h3>
            {%- for debug in debugs %}
                {%- set topic, data = debug %}
                <div class="debug">
                    <h4 class="debug-heading">{{ topic|e }}</h4>
                    <div class="debug-content json-dump">{{ data|tojson(2)|e }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>